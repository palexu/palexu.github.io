.posts-collapse {
  .post-title {
    font-size: $font-size-medium;
    font-weight: normal;
    line-height: inherit;
    margin-bottom: 0;
    margin-left: $font-size-smallest * 6;

    &::after {
      margin-left: 3px;
      opacity: .6;
    }

    a, span.exturl {
      border-bottom: none;
      color: $grey-dim;
    }
  }
}
